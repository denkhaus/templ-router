package test

import (
	"fmt"
	"github.com/denkhaus/templ-router/demo/pkg/dataservices"
)

templ Page(data *dataservices.UserData) {
	<div class="max-w-4xl mx-auto">
		<div class="bg-white rounded-lg shadow-lg overflow-hidden">
			<!-- Profile Header with Real Data -->
			<div class="bg-gradient-to-r from-blue-500 to-purple-600 px-8 py-12">
				<div class="flex items-center space-x-6">
					<div class="w-24 h-24 bg-white rounded-full flex items-center justify-center">
						<svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
						</svg>
					</div>
					<div class="text-white">
						<h1 class="text-3xl font-bold">DataService Demo</h1>
						<p class="text-blue-100 mt-2">Demo User: { data.ID }</p>
						<p class="text-blue-100">Welcome { data.Name }!</p>
					</div>
				</div>
			</div>
			<!-- Profile Content with Data Service -->
			<div class="p-8">
				<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
					<!-- User Information from Data Service -->
					<div>
						<h2 class="text-2xl font-semibold text-gray-800 mb-6">User Information</h2>
						<div class="space-y-4">
							<div class="flex justify-between items-center py-3 border-b border-gray-200">
								<span class="text-gray-600 font-medium">Full Name</span>
								<span class="text-gray-800">{ data.Name }</span>
							</div>
							<div class="flex justify-between items-center py-3 border-b border-gray-200">
								<span class="text-gray-600 font-medium">Email</span>
								<span class="text-gray-800">{ data.Email }</span>
							</div>
							<div class="flex justify-between items-center py-3 border-b border-gray-200">
								<span class="text-gray-600 font-medium">Role</span>
								<span class="px-2 py-1 bg-blue-100 text-blue-800 rounded text-sm">{ data.Role }</span>
							</div>
						</div>
					</div>
					<!-- Activity & Stats from Data Service -->
					<div>
						<h2 class="text-2xl font-semibold text-gray-800 mb-6">Activity Stats</h2>
						<div class="space-y-6">
							<!-- Stats Cards with Real Data -->
							<div class="grid grid-cols-2 gap-4">
								<div class="bg-blue-50 p-4 rounded-lg text-center">
									<div class="text-2xl font-bold text-blue-600">{ fmt.Sprint(data.Projects) }</div>
									<div class="text-sm text-blue-800">Projects</div>
								</div>
								<div class="bg-green-50 p-4 rounded-lg text-center">
									<div class="text-2xl font-bold text-green-600">{ fmt.Sprint(data.Tasks) }</div>
									<div class="text-sm text-green-800">Tasks</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<!-- Data Service Demo Info -->
				<div class="mt-8 bg-green-50 border border-green-200 rounded-lg p-6">
				<h3 class="text-lg font-semibold text-green-800 mb-3">Data Service Demo</h3>
					<p class="text-green-700 mb-2">This template uses a DataService to provide real data!</p>
					<div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-green-700">
						<div>
							<p><strong>Service:</strong> dataservices.UserDataService</p>
							<p><strong>Method:</strong> GetData(ctx, params) - Standardized!</p>
						</div>
						<div>
							<p><strong>Data Type:</strong> *dataservices.UserData</p>
							<p><strong>DI Integration:</strong> Automatic</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
}