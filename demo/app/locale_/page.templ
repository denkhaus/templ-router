				<div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
					<div>
						<strong>{ router.T(ctx, "current_locale") }:</strong> { router.GetCurrentLocale(ctx) }
					</div>
					<div>
						<strong>{ router.T(ctx, "current_template") }:</strong> { router.GetCurrentTemplate(ctx) }
					</div>
					<div>
						<strong>{ router.T(ctx, "available_keys") }:</strong> { fmt.Sprint(len(router.GetAvailableKeys(ctx))) }
					</div>
