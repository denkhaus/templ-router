					<div class="space-y-3">
						<a href={ templ.URL("/" + router.GetCurrentLocale(ctx) + "/dashboard") } class="block bg-white p-3 rounded border hover:bg-gray-50 transition-colors">
							<strong>{ router.T(ctx, "nav_dashboard") }</strong>
							<div class="text-sm text-gray-600">{ router.T(ctx, "nav_dashboard_desc") }</div>
						</a>
						<a href={ templ.URL("/" + router.GetCurrentLocale(ctx) + "/admin") } class="block bg-white p-3 rounded border hover:bg-gray-50 transition-colors">
