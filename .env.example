# Feedback Web Configuration Sample
# Copy this file to .env and adjust the values as needed

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
FB_SERVER_HOST=localhost
FB_SERVER_PORT=8090
FB_SERVER_BASE_URL=http://localhost:8090
FB_SERVER_READ_TIMEOUT=30s
FB_SERVER_WRITE_TIMEOUT=30s
FB_SERVER_IDLE_TIMEOUT=120s
FB_SERVER_SHUTDOWN_TIMEOUT=30s

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
FB_DATABASE_HOST=localhost
FB_DATABASE_PORT=5432
FB_DATABASE_USER=postgres
FB_DATABASE_PASSWORD=postgres
FB_DATABASE_NAME=feedback_web
FB_DATABASE_SSL_MODE=disable

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================

# Email verification settings
FB_AUTH_REQUIRE_EMAIL_VERIFICATION=true
FB_AUTH_VERIFICATION_TOKEN_EXPIRY=24h

# Session settings
FB_AUTH_SESSION_COOKIE_NAME=session_id
FB_AUTH_SESSION_EXPIRY=24h
FB_AUTH_SESSION_SECURE=false
FB_AUTH_SESSION_HTTP_ONLY=true
FB_AUTH_SESSION_SAME_SITE=lax

# Password settings
FB_AUTH_MIN_PASSWORD_LENGTH=8
FB_AUTH_REQUIRE_STRONG_PASSWORD=false

# Default admin user settings
FB_AUTH_CREATE_DEFAULT_ADMIN=true
FB_AUTH_DEFAULT_ADMIN_EMAIL=admin@localhost
FB_AUTH_DEFAULT_ADMIN_PASSWORD=admin123
FB_AUTH_DEFAULT_ADMIN_FIRST_NAME=Default
FB_AUTH_DEFAULT_ADMIN_LAST_NAME=Admin

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP settings (leave empty to use dummy mode)
FB_EMAIL_SMTP_HOST=
FB_EMAIL_SMTP_PORT=587
FB_EMAIL_SMTP_USERNAME=
FB_EMAIL_SMTP_PASSWORD=
FB_EMAIL_SMTP_USE_TLS=true

# Email settings
FB_EMAIL_FROM_EMAIL=noreply@localhost
FB_EMAIL_FROM_NAME="Feedback Web"
FB_EMAIL_REPLY_TO_EMAIL=

# Development settings
FB_EMAIL_ENABLE_DUMMY_MODE=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CSRF protection
FB_SECURITY_CSRF_SECRET=change-me-in-production
FB_SECURITY_CSRF_SECURE=false
FB_SECURITY_CSRF_HTTP_ONLY=true
FB_SECURITY_CSRF_SAME_SITE=strict

# Rate limiting
FB_SECURITY_ENABLE_RATE_LIMIT=true
FB_SECURITY_RATE_LIMIT_REQUESTS=100

# Security headers
FB_SECURITY_ENABLE_SECURITY_HEADERS=true
FB_SECURITY_ENABLE_HSTS=false
FB_SECURITY_HSTS_MAX_AGE=31536000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
FB_LOGGING_LEVEL=info
FB_LOGGING_FORMAT=json
FB_LOGGING_OUTPUT=stdout
FB_LOGGING_ENABLE_FILE=false
FB_LOGGING_FILE_PATH=logs/app.log

# =============================================================================
# PRODUCTION RECOMMENDATIONS
# =============================================================================
# For production environments, consider these changes:
#
# FB_SERVER_BASE_URL=https://yourdomain.com
# FB_AUTH_SESSION_SECURE=true
# FB_SECURITY_CSRF_SECRET=your-secure-random-secret
# FB_SECURITY_CSRF_SECURE=true
# FB_SECURITY_ENABLE_HSTS=true
# FB_EMAIL_ENABLE_DUMMY_MODE=false
# FB_EMAIL_SMTP_HOST=your-smtp-server.com
# FB_EMAIL_SMTP_USERNAME=your-smtp-username
# FB_EMAIL_SMTP_PASSWORD=your-smtp-password
# FB_AUTH_CREATE_DEFAULT_ADMIN=false
# FB_LOGGING_LEVEL=warn
